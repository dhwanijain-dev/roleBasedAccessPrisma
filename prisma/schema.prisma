datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
}

enum Role {
  ADMIN
  SUBADMIN
  USER
}

model Company {
  id        String        @id @default(uuid())
  name      String
  createdAt DateTime      @default(now())
  files     CompanyFile[]
}

model CompanyFile {
  id        String   @id @default(uuid())
  companyId String
  filename  String
  path      String
  url       String?   // public url or signed url
  size      Int?
  mime      String?
  createdAt DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id])
  @@index([companyId])
}